			<div class="clear" style="clear: both;"></div>
			</div><!--#add-media-->
 	
    	
    	{% block header %}
    	<div id='header-bg'></div>
    	<div id="wrapper" >
    	
    			
    			
				<div id="header">
					
					<div id="header-title" style="margin-left: -30px;">
						<ul>
						
							<li ><a href="{{path('ZeegaEditorBundle_home')}}" class="dark"><img src="{{ asset('gamma/images/zeega-logo-header.png') }}" style="margin-top: -4px;"/></a></li>
							{% if playground %}
							<li class='{% if num_playgrounds > 1 %} drop-down{% endif %} clearfix' >
									<a  {% if num_playgrounds > 1 %} class='drop-down-toggle' {% endif %}  href="{{ path('ZeegaEditorBundle_playground', {'short': playground.short }) }}" class="dark">  {{title}} </a>
									{% if num_playgrounds > 1 %} 
									<ul class='drop-down-menu'>
									
										{% for p in playgrounds %}
												<li><a  href="{{ path('ZeegaEditorBundle_playground', {'short': p.short }) }}" class="dark">  {{p.title}} </a></li>
										{% endfor %}
									</ul>
									{% endif %} 
							</li>
							
							
							<li class=' clearfix' style="margin-left: 20px;">
									<a   href="{{ path('ZeegaEditorBundle_browser', {'short': playground.short }) }}" class="dark">Collections</a>
	
							</li>
							<li>|</li>
							<li class='drop-down clearfix' >
									<a  class='drop-down-toggle' href="#" class="dark">Projects</a>
									<ul class='drop-down-menu' style="width:200px;">
									
												<li><a class="new-project" href="#" style="font-size: 12px;">Create New Project</a></li><br>
												
												<hr>

									
										{% for project in myprojects %}
												<li><a href="{{ path('ZeegaEditorBundle_editor', { 'id': project.id,'short': playground.short }) }}" class="dark">{{project.title}}</a></li><br>
										{% endfor %}
									</ul>
							</li>
							<li>|</li>
							
							<li class='item add-media' ><a href="#">Add Media</a></li>							
							{% else %} 
							<li class='item add-media' style="margin-left: 45px;" ><a href="#">Add Media</a></li>
							{% endif %} 
							{% if is_granted('ROLE_ADMIN') %}
															<li>|</li><li><a href="{{ path('fos_user_registration_register') }}" class="dark">Register User</a></li><br>
							{% endif %}
						</ul>
						
						
						
					</div>
					
	
					<div id="header-nav">
		
						<ul>
							<li class='item'><a href="{{ path('ZeegaEditorBundle_faq')}}">FAQ</a></li>
							<li class='drop-down clearfix item'>
								Logged in as <a href='#' class='drop-down-toggle'>{{displayname}}</a>
								<ul class='drop-down-menu'>	
									<li id="css-change"><a href="#">Presentation</a></li>
									<li><a href="{{ path('fos_user_change_password')}}">User Profile</a></li>
									<li><a href='{{ path('_security_logout')}}'>Logout</a></li>
								</ul>
							</li>
						</ul>
					</div> <!-- #headerLoggedInWrapper -->
			</div> <!-- #header -->	
			{% endblock %}
		

			<div id="editor" class='clearfix'>
				
				{% block body %}{% endblock %}
		   
